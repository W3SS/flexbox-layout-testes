<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:flexWrap="wrap"
    app:showDivider="beginning|end|middle"
    app:dividerDrawable="@drawable/linha"
    app:alignContent="flex_start"
    app:justifyContent="space_between"
    app:flexDirection="row"
    tools:context="br.com.thiengo.flexboxlayouttestes.MainActivity">

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffa100"
        android:gravity="center"
        android:text="1"
        app:layout_flexGrow="1"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        app:layout_flexGrow="2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffa100"
        android:gravity="center"
        android:text="2"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        app:layout_flexGrow="2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffa100"
        android:gravity="center"
        android:text="3"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        app:layout_flexGrow="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffa100"
        android:gravity="center"
        android:text="4"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        app:layout_wrapBefore="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffa100"
        android:gravity="center"
        android:text="5"
        app:layout_flexGrow="1"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffa100"
        android:gravity="center"
        android:text="6"
        app:layout_flexBasisPercent="25%"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        app:layout_flexBasisPercent="25%"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffa100"
        android:gravity="center"
        android:text="7"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffa100"
        android:gravity="center"
        android:text="8"
        app:layout_flexGrow="4"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</com.google.android.flexbox.FlexboxLayout>
